# Application Settings
APP_NAME=ClassroomPortal API
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/classroom_portal

# JWT Configuration
# IMPORTANT: Change SECRET_KEY in production! Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins
# The app has default origins configured for localhost and Android emulator
# You can override by setting CORS_ORIGINS as a JSON array in .env:
# CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
